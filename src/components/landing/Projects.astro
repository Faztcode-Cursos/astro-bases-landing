---
import {projects} from '../../config/projects.json'
---

<h1 class="font-bold text-5xl mt-8 text-center">Projects</h1>

<div class="grid md:grid-cols-3 gap-4 p-4">
  {
    projects.map(project => (
      <div class="flex flex-col md:flex-row gap-10 text-center md:text-left">
        <div class="flex-1">
          <h2 class="text-2xl font-bold my-4">{project.title}</h2>
          <p class="my-2">{project.description}</p>
          <button class="bg-indigo-500 hover:bg-indigo-400 px-3 py-2">More info</button>
        </div>

        <div class="flex-1">
          <img src={project.image} class="w-72 m-auto" />
        </div>
      </div>
    ))
  }
</div>